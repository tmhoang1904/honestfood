<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d{HH:mm:ss} %-5level %logger{35} - %msg%n
			</Pattern>
		</encoder>
	</appender>
	<logger name="java.sql" level="DEBUG">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="vn.com.arillance.cleanhome.mapper.UserMapper"
		level="DEBUG" />
	<logger name="vn.com.arillance.cleanhome.mapper.OrderMapper" level="DEBUG" />
	
	<logger name="vn.com.arillance.cleanhome.mapper.TermMapper" level="DEBUG" />

	<root>
		<level value="ERROR" />
		<appender-ref ref="STDOUT" />
	</root>
	
</configuration>